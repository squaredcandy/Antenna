<resources>
    <!-- Launcher -->
    <style name="Theme.Antenna.Launcher">
        <item name="android:statusBarColor">@color/black_800</item>
        <item name="android:navigationBarColor">@color/black_800</item>
        <item name="android:colorBackground">@color/black_800</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Splashscreen -->
    <style name="Theme.Antenna.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenBackground">@color/black_900</item>
        <item name="postSplashScreenTheme">@style/Theme.Antenna</item>
    </style>

    <style name="Theme.Antenna" parent="Base.Theme.Antenna">
        <!--Material color attributes (dark theme) -->
        <item name="colorPrimary">@color/amber_600</item>
        <item name="colorPrimaryVariant">@color/amber_400</item>
        <item name="colorSecondary">@color/grey_600</item>
        <item name="colorSecondaryVariant">@color/grey_400</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:colorBackground">@color/black_800</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="colorSurface">@color/black_700</item>
        <item name="colorError">@color/red_200</item>
        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/white_50</item>
        <item name="colorOnBackground">@color/white_50</item>
        <item name="colorOnSurface">@color/white_50</item>
        <item name="colorOnError">@color/black_900</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">?colorSurface</item>
    </style>
</resources>